<Window x:Class="WagemasterEvents.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="Wagemaster Events" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="EventsDataGrid" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Company" Binding="{Binding Company}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Reminder Name" Binding="{Binding ReminderType}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Refnum" Binding="{Binding Refno}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Refname" Binding="{Binding Refname}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Due Date" Binding="{Binding DueDate, StringFormat=d}" IsReadOnly="True"/>
                <DataGridTemplateColumn Header="Next Reminder Date">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DatePicker SelectedDate="{Binding NextReminderDate}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridCheckBoxColumn Header="Dismissed" Binding="{Binding Dismissed}">
                    <DataGridCheckBoxColumn.ElementStyle>
                        <Style TargetType="CheckBox">
                            <Setter Property="IsEnabled" Value="False"/>
                        </Style>
                    </DataGridCheckBoxColumn.ElementStyle>
                </DataGridCheckBoxColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="ToggleDismissedButton" Content="Show Dismissed" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="25" Click="ToggleDismissedButton_Click"/>
        <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="25" Margin="130,0,0,0" Click="SaveButton_Click"/>
        <Menu x:Name="MainMenu">
            <MenuItem Header="Settings" Click="SettingsMenuItem_Click"/>
        </Menu>
        
    </Grid>
</Window>
