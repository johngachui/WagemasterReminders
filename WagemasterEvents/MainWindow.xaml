<Window x:Class="WagemasterEvents.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WagemasterEvents"
        Title="Wagemaster Events" Height="270" Width="420">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="250" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
            <Menu x:Name="MainMenu" Grid.Row="1" Margin="10,0,0,0">
                <MenuItem Header="Settings" Click="SettingsMenuItem_Click"/>
            </Menu>
            <Button x:Name="ToggleDismissedButton" Content="Show Dismissed" Width="75" Height="25" Click="ToggleDismissedButton_Click"/>
            <Button x:Name="SaveButton" Content="Save" Width="50" Height="25" Margin="5,0,0,0" Click="SaveButton_Click"/>
        </StackPanel>
        

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <Grid Margin="10" DataContext="{Binding SelectedEvent}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="270"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="25" />
                </Grid.RowDefinitions>

                <TextBlock Text="Company:" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBox Text="{Binding SelectedEvent.Company}" Grid.Column="1" Margin="5,0,0,0" Height="20"/>

                <TextBlock Text="Reminder Name:" FontWeight="Bold" VerticalAlignment="Center" Grid.Row="1"/>
                <TextBox Text="{Binding SelectedEvent.ReminderType}" Grid.Column="1" Margin="5,0,0,0" Height="20" Grid.Row="1"/>

                <TextBlock Text="Refnum:" FontWeight="Bold" VerticalAlignment="Center" Grid.Row="2"/>
                <TextBox Text="{Binding SelectedEvent.Refno}" Grid.Column="1" Margin="5,0,0,0" Height="20" Grid.Row="2"/>

                <TextBlock Text="Refname:" FontWeight="Bold" VerticalAlignment="Center" Grid.Row="3"/>
                <TextBox Text="{Binding SelectedEvent.Refname}" Grid.Column="1" Margin="5,0,0,0" Height="20" Grid.Row="3"/>

                <TextBlock Text="Due Date:" FontWeight="Bold" VerticalAlignment="Center" Grid.Row="4"/>
                <DatePicker SelectedDate="{Binding SelectedEvent.DueDate}" Grid.Column="2" Margin="5,0,0,0" Height="25" Grid.Row="4"/>

                <TextBlock Text="Next Reminder Date:" FontWeight="Bold" VerticalAlignment="Center" Grid.Row="5"/>
                <DatePicker SelectedDate="{Binding SelectedEvent.NextReminderDate}" Grid.Column="1" Margin="5,0,0,0" Height="25" Grid.Row="5"/>

                <TextBlock Text="Dismissed:" FontWeight="Bold" VerticalAlignment="Center" Grid.Row="6"/>
                <CheckBox IsChecked="{Binding SelectedEvent.Dismissed}" Grid.Column="1" Margin="5,0,0,0" Height="20" Grid.Row="6"/>

            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
