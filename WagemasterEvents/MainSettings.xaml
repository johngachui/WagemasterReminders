<Window x:Class="WagemasterEvents.MainSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="200" Width="400">
    <Grid>
        <Label Content="Server:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"/>
        <TextBox x:Name="ServerTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="25" Margin="80,20,0,0"/>
        <Label Content="Cache Time:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,60,0,0"/>
        <TextBox x:Name="CacheTimeTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="25" Margin="80,60,0,0"/>
        <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="25" Margin="280,100,0,0" Click="SaveButton_Click"/>
    </Grid>
</Window>
